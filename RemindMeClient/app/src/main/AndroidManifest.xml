<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="relic.remindme" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".screens.homepage.HomePage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.listitems.ListItemActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".screens.QRscanner.QRScanner_screen"
            android:label="@string/title_activity_qrscanner_screen" >
        </activity>
        <activity
            android:name=".push_Notifications.NotifyMessage"
            android:label="@string/title_activity_notify_message" >
        </activity>
        <activity
            android:name=".screens.notifications.Notifications_MainScreen"
            android:label="@string/title_activity_notifications__main_screen" >
        </activity>

        <receiver
            android:name=".screens.notifications.AlarmRing"
            android:process=":remote" />

        <activity
            android:name=".screens.notifications.Location"
            android:label="@string/title_activity_location" >
        </activity>
        <activity
            android:name=".screens.notifications.GenerateNotifications"
            android:label="@string/title_activity_generate" >
        </activity>
    </application>

</manifest>
