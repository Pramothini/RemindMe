<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="relic.remindme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="relic.remindme.HomePage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="relic.remindme.ListItemActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="relic.remindme.NotificationSettings"
            android:label="@string/title_activity_notification_settings" >
        </activity>
        <activity
            android:name="relic.remindme.SetTime"
            android:theme="@style/AppTheme.CustomTheme" >
        </activity>
        <activity
            android:name="relic.remindme.SetLocation"
            android:theme="@style/AppTheme.CustomTheme" >
        </activity>
        <activity
            android:name="relic.remindme.SetDate"
            android:theme="@style/AppTheme.CustomTheme" >
        </activity>
        <activity
            android:name="relic.remindme.RepeatAlert"
            android:theme="@style/AppTheme.CustomTheme" >
        </activity>
        <activity
            android:name="relic.remindme.RecordAlertSound"
            android:theme="@style/AppTheme.CustomTheme" >
        </activity>
        <activity
            android:name="relic.remindme.QRscanner.QRScanner_screen"
            android:label="@string/title_activity_qrscanner_screen" >
        </activity>
        <activity
            android:name="relic.remindme.push_Notifications.NotifyMessage"
            android:label="@string/title_activity_notify_message" >
        </activity>
    </application>

</manifest>