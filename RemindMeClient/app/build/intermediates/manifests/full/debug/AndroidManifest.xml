<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="relic.remindme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="relic.remindme.screens.homepage.HomePage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="relic.remindme.screens.listitems.ListItemActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="relic.remindme.screens.QRscanner.QRScanner_screen"
            android:label="@string/title_activity_qrscanner_screen" >
        </activity>
        <activity
            android:name="relic.remindme.screens.notifications.Notifications_MainScreen"
            android:label="@string/title_activity_notifications__main_screen" >
        </activity>

        <receiver
            android:name="relic.remindme.screens.notifications.AlarmRing"
            android:process=":remote" />

        <activity
            android:name="relic.remindme.screens.notifications.Location"
            android:label="@string/title_activity_location" >
        </activity>
        <activity
            android:name="relic.remindme.screens.notifications.GenerateNotifications"
            android:label="@string/title_activity_generate" >
        </activity>
        <activity
            android:name="relic.remindme.screens.speechtotext.UserSpeechToText"
            android:label="@string/title_activity_user_speech_to_text" >
        </activity>
    </application>

</manifest>